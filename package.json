{
    "name": "wav0",
    "private": true,
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*",
        "tooling/*"
    ],
    "scripts": {
        "check": "biome check --write .",
        "format": "biome format --write .",
        "dev": "turbo dev",
