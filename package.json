    "dependencies": {
        "jotai-xstate": "^0.6.1",
        "xstate": "^5.23.0"
    },
    "devDependencies": {
        "turbo": "^2.5.8",
        "@biomejs/biome": "2.2.4",
        "ultracite": "5.4.7"
