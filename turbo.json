{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"AI_GATEWAY_API_KEY",
		"AWS_*",
		"BETTER_AUTH_*",
		"BLOB_READ_WRITE_TOKEN",
		"CONVEX_*",
		"ELEVENLABS_API_KEY",
		"FIRECRAWL_API_KEY",
		"GOOGLE_*",
		"REDIS_STREAM_URL",
		"RESEND_*",
		"UPSTASH_*"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**"]
		},
		"deploy": {
			"dependsOn": ["^deploy"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["convex/_generated/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^build", "^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
